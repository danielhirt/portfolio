---
import { Image } from 'astro:assets';
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import FormattedDate from '../../components/FormattedDate.astro';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}

type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { title, description, pubDate, updatedDate, heroImage, tags } = post.data;
const { Content } = await render(post);
---

<BaseLayout title={title} description={description}>
	<article class="max-w-4xl mx-auto px-4 py-12">
		<!-- Header -->
		<header class="mb-8 text-center">
			<a href="/blog" class="text-accent hover:text-accent-dark transition-colors mb-4 inline-block">
				&larr; Back to Blog
			</a>
			<h1 class="text-4xl md:text-5xl font-bold text-gray-dark dark:text-text-dark mb-4">{title}</h1>
			<div class="text-gray mb-4">
				<FormattedDate date={pubDate} />
				{updatedDate && (
					<span class="italic ml-2">
						(Updated: <FormattedDate date={updatedDate} />)
					</span>
				)}
			</div>
			{tags && tags.length > 0 && (
				<div class="flex flex-wrap justify-center gap-2">
					{tags.map((tag) => (
						<span class="text-sm px-3 py-1 bg-gray-light dark:bg-bg-dark-elevated text-gray rounded-full">
							{tag}
						</span>
					))}
				</div>
			)}
		</header>

		{/* Hero Image */}
		{heroImage && (
			<div class="mb-8 rounded-xl overflow-hidden">
				<Image
					src={heroImage}
					alt={title}
					width={1200}
					height={675}
					class="w-full"
				/>
			</div>
		)}

		{/* Content */}
		<div class="prose max-w-none">
			<Content />
		</div>
	</article>
</BaseLayout>
