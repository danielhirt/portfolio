---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPostCard from '../../components/BlogPostCard.astro';

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const title = 'Blog';
const description = 'Thoughts on software engineering, projects, and things I am learning.';
---

<BaseLayout title={title} description={description}>
	<section class="max-w-5xl mx-auto px-4 py-12">
		<div class="mb-12">
			<h1 class="text-4xl font-bold text-gray-dark dark:text-text-dark mb-4">Blog</h1>
			<p class="text-xl text-gray max-w-2xl">
				Thoughts on software engineering, projects, and things I'm learning along the way.
			</p>
		</div>

		{posts.length > 0 ? (
			<div class="grid md:grid-cols-2 gap-6">
				{posts.map((post, index) => (
					<BlogPostCard post={post} featured={index === 0} />
				))}
			</div>
		) : (
			<p class="text-gray">No posts yet. Check back soon!</p>
		)}
	</section>
</BaseLayout>
