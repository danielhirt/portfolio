---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProjectCard from '../../components/ProjectCard.astro';

const projects = (await getCollection('projects'))
	.sort((a, b) => a.data.order - b.data.order);

const title = 'Projects';
const description = 'A collection of projects I have worked on.';
---

<BaseLayout title={title} description={description}>
	<section class="max-w-5xl mx-auto px-4 py-12">
		<div class="mb-12">
			<h1 class="text-4xl font-bold text-gray-dark dark:text-text-dark mb-4">Projects</h1>
			<p class="text-xl text-gray max-w-2xl">
				A collection of projects I've worked on. Some are open source, others are private,
				but all represent interesting problems I've tackled.
			</p>
		</div>

		{projects.length > 0 ? (
			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
				{projects.map((project) => (
					<ProjectCard project={project} />
				))}
			</div>
		) : (
			<p class="text-gray">No projects yet. Check back soon!</p>
		)}
	</section>
</BaseLayout>
