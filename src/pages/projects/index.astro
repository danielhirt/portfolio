---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const projects = (await getCollection('projects'))
	.sort((a, b) => a.data.order - b.data.order);

const title = 'Projects';
const description = 'A collection of projects I have worked on.';
---

<BaseLayout title={title} description={description}>
	<section class="max-w-2xl mx-auto px-4 py-12">
		<div class="bg-bg-dark/60 backdrop-blur-md border border-gray-light/10 px-8 py-10 md:px-10 md:py-12">
			{projects.length > 0 ? (
				projects.map((project, i) => (
					<div class:list={[i > 0 && "border-t border-gray-dark/50 pt-8", i > 0 ? "mt-8" : ""]}>
						<div class="flex items-center gap-3 mb-2">
							<a href={`/projects/${project.id}/`} class="font-bold text-accent-light hover:text-white transition-colors">{project.data.title}</a>
							<span class:list={[
								"text-xs px-2 py-0.5 font-mono shrink-0",
								project.data.github
									? "text-green-400"
									: "text-text-dark-muted"
							]}>
								{project.data.github ? "open source" : "closed source"}
							</span>
						</div>
						<p class="text-sm text-text-dark-muted leading-relaxed mb-3">{project.data.description}</p>
						<div class="flex flex-wrap items-center gap-3">
							{project.data.github && (
								<a
									href={project.data.github}
									target="_blank"
									rel="noopener noreferrer"
									class="inline-flex items-center gap-1.5 text-xs text-accent-light hover:text-white transition-colors font-mono"
								>
									<svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 16 16">
										<path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
									</svg>
									[view source]
								</a>
							)}
							{project.data.demo && (
								<a
									href={project.data.demo}
									target="_blank"
									rel="noopener noreferrer"
									class="inline-flex items-center gap-1.5 text-xs text-accent-light hover:text-white transition-colors font-mono"
								>
									<svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
									</svg>
									[install]
								</a>
							)}
							{project.data.tags.length > 0 && (
								<div class="flex flex-wrap gap-2">
									{project.data.tags.map((tag: string) => (
										<span class="text-xs font-mono px-2 py-0.5 text-text-dark-muted border border-gray-dark/50">{tag}</span>
									))}
								</div>
							)}
						</div>
					</div>
				))
			) : (
				<p class="text-text-dark-muted">No projects yet. Check back soon!</p>
			)}
		</div>
	</section>
</BaseLayout>
