---
import { Image } from 'astro:assets';
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
	const projects = await getCollection('projects');
	return projects.map((project) => ({
		params: { slug: project.id },
		props: project,
	}));
}

type Props = CollectionEntry<'projects'>;

const project = Astro.props;
const { title, description, heroImage, tags, github, demo } = project.data;
const { Content } = await render(project);
---

<BaseLayout title={title} description={description}>
	<article class="max-w-4xl mx-auto px-4 py-12">
		<!-- Header -->
		<header class="mb-8">
			<a href="/projects" class="text-accent dark:text-accent-light hover:text-accent-dark dark:hover:text-white transition-colors mb-4 inline-block">
				&larr; Back to Projects
			</a>
			<h1 class="text-4xl font-bold text-gray-dark dark:text-text-dark mb-4">{title}</h1>
			<p class="text-xl text-gray dark:text-text-dark-muted mb-6">{description}</p>

			{/* Tags */}
			{tags.length > 0 && (
				<div class="flex flex-wrap gap-2 mb-6">
					{tags.map((tag) => (
						<span class="text-sm px-3 py-1 rounded-full bg-gradient-to-r from-accent/10 to-accent-light/15 text-accent dark:from-accent/20 dark:to-accent-light/25 dark:text-accent-light border border-accent/15 dark:border-accent-light/20">
							{tag}
						</span>
					))}
				</div>
			)}

			{/* Links */}
			<div class="flex gap-4">
				{github && (
					<a
						href={github}
						target="_blank"
						rel="noopener noreferrer"
						class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-accent/10 to-accent-light/20 text-accent dark:from-accent/20 dark:to-accent-light/30 dark:text-accent-light rounded-lg hover:brightness-110 transition-all"
					>
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 16 16">
							<path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
						</svg>
						View Source
					</a>
				)}
				{demo && (
					<a
						href={demo}
						target="_blank"
						rel="noopener noreferrer"
						class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-accent to-accent-light text-white rounded-lg hover:brightness-110 transition-all"
					>
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
						</svg>
						Install
					</a>
				)}
			</div>
		</header>

		{/* Hero Image */}
		{heroImage && (
			<div class="mb-8 rounded-xl overflow-hidden">
				<Image
					src={heroImage}
					alt={title}
					width={1200}
					height={675}
					class="w-full"
				/>
			</div>
		)}

		{/* Content */}
		<div class="prose max-w-none">
			<Content />
		</div>
	</article>
</BaseLayout>
